<MudPaper Class="my-2" Outlined="true">
    <MudPaper Class="mud-primary px-2">
        <MudText Typo="Typo.h6"> INFO </MudText>
    </MudPaper>
    <MudCard Outlined="true">
        <MudCardContent>
            <MudText Typo="Typo.caption"> TaxId</MudText>
            <MudText Typo="Typo.subtitle2"> @Company.TaxId</MudText>
            <MudText Typo="Typo.caption"> Name </MudText>
            <MudText Typo="Typo.subtitle2"> @Company.Name </MudText>
            <MudText Typo="Typo.caption"> Address </MudText>
            <MudText Typo="Typo.subtitle2"> @Company.Address </MudText>
        </MudCardContent>
    </MudCard>
</MudPaper>

@code{
    [Parameter] [EditorRequired] public Company Company { get; set; } = null!;
}