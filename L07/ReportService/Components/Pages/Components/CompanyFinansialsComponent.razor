<MudPaper Outlined="true">
    <MudPaper Class="mud-success px-2" Square="true">
        <MudText Typo="Typo.h6"> Financials</MudText>
    </MudPaper>
    <MudSimpleTable>
        <thead>
            <tr>
                <th>Profit</th>
                <th>Revenue</th>
                <th>Expenses</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Financial.Profit.ToString("C")</td>
                <td>@Financial.Revenue.ToString("C")</td>
                <td>@Financial.Expenses.ToString("C")</td>
            </tr>
        </tbody>
    </MudSimpleTable>
</MudPaper>

@code{
    [Parameter] [EditorRequired] public FinancialSummary Financial { get; set; } = null!;
}